#: kivy 1.8.0


# SCREENS

<LoginScreen>:

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            Label:
                size_hint: (.3, 1)
                text: 'User Name'
            TextInput:
                id: ti_username
                size_hint: (.7, 1)
                multiline: False
                font_size: 150

        BoxLayout:
            orientation: 'horizontal'
            Label:
                size_hint: (.3, 1)
                text: 'Password'
            TextInput:
                id: ti_password
                size_hint: (.7, 1)
                multiline: False
                password: True
                font_size: 150

        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Login'
                on_press: root.login()
            Button:
                id: btn_register
                text: 'Register'
                on_press: root.manager.current = 'register'

<RegisterScreen>:
    GridLayout:
        cols: 2
        Label:
            text: 'User Name'
        TextInput:
            id: ti_username
            multiline: False
        Label:
            text: 'Password'
        TextInput:
            id: ti_password1
            multiline: False
            password: True
        Label:
            text: 'Retype Password'
        TextInput:
            id: ti_password2
            multiline: False
            password: True
        Button:
            id: btn_cancel
            text: 'Cancel'
            on_press: root.manager.current = 'login'
        Button:
            id: btn_register
            text: 'Register'
            on_press: root.register()

<MainScreen>:
    BoxLayout:
        id: bl_main
        orientation: 'horizontal'

        BoxLayout:
            id: gl_settings
            orientation: 'vertical'

            Button:
                id: btn_corpus
                size_hint: (.4, 1)
                text: 'Corpus'
                on_press: root.manager.current = 'corpus'
            Button:
                id: btn_bindings
                size_hint: (.4, 1)
                text: 'Bindings'
            Button:
                id: btn_playground
                size_hint: (.4, 1)
                text: 'Playground'
            Button:
                id: btn_advanced
                size_hint: (.4, 1)
                text: 'Advanced'

        GridLayout:
            id: gl_user_stats
            cols: 1

            Label:
                text: 'USER STATS'

<CorpusScreen>:
    GridLayout:
        cols: 1

        Button:
            text: 'Load'
            on_press: root.show_file_dialog()

# DIALOGS

<FileDialog>:

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'

        FileChooserListView:
            id: filechooser

        BoxLayout:
            Button:
                text: 'Cancel'
                on_release: root.cancel()

            Button:
                text: 'Open'
                on_release: root.load(filechooser.path, filechooser.selection)

